<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.doodler.client.controllers.LandingController"
            stylesheets="@/com/doodler/client/styles/style.css">

    <center>
        <HBox alignment="CENTER" spacing="60" BorderPane.alignment="CENTER">
            <VBox alignment="CENTER" spacing="10">
                <padding>
                    <Insets top="10" right="10" bottom="10" left="10" />
                </padding>
                <ImageView fitWidth="120" fitHeight="120" preserveRatio="true">
                    <Image url="@/com/doodler/client/assets/profile_icon.png" />
                </ImageView>
                <TextField fx:id="nameField" promptText="Enter your name"
                           prefWidth="180" styleClass="input-field"/>
            </VBox>

            <VBox alignment="CENTER" spacing="15">
                <padding>
                    <Insets top="10" right="10" bottom="10" left="10" />
                </padding>
                <Label text="DOODLER" styleClass="game-title"/>
                <Button text="Host Game" onAction="#onHost" styleClass="green-btn"/>
                <Button text="Join Game" onAction="#onJoin" styleClass="green-btn"/>
            </VBox>
        </HBox>
    </center>
</BorderPane>
